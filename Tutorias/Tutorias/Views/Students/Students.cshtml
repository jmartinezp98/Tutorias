@model IEnumerable<Tutorias.ViewModels.StudentsViewModel>

@{
    ViewBag.Title = "Alumnos";
    Layout = "~/Views/Shared/_StudentsLayout.cshtml";
}
<div class="card border-0 shadow my-5">
    <div class="card-body p-5">

        <div style="padding-left:16px">
            <h1 style="text-align:center;">@Session["UserGroup"].ToString()</h1>
            <br />
            <h1 style="text-align:center;">@ViewBag.Title</h1>
            <br />
        </div>

        <hr>




        <table class="table">
            <tr>
                <th>
                </th>
                <th>
                    Matricula
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Vulnerabilidades
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="font-size:18px;">
                        @Html.ActionLink("+","Student","Students",item,null)
                    </td>
                        
                    <td>
                        @Html.DisplayFor(modelItem => item.Matricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @if (item.Vul1 > 0)
                        {
                            <img src="~/Images/Vulnerabilidades/acade.png" alt="@Html.DisplayFor(i => item.Vul1)" width="30" height="30" />
                        }
                        @if (item.Vul2 > 0)
                        {
                            <img src="~/Images/Vulnerabilidades/econo.png" alt="@Html.DisplayFor(i => item.Vul2)" width="30" height="30" />
                        }
                        @if (item.Vul3 > 0)
                        {
                            <img src="~/Images/Vulnerabilidades/psico.png" alt="@Html.DisplayFor(i => item.Vul3)" width="30" height="30" />
                        }
                        @if (item.Vul4 > 0)
                        {
                            <img src="~/Images/Vulnerabilidades/trans.png" alt="@Html.DisplayFor(i => item.Vul4)" width="30" height="30" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

